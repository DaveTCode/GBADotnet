@using GameboyAdvanced.Web.Pages
@model GameboyAdvanced.Web.Nointro.DirectoryTreeEntry

@if (Model.SubDirectories.Any() || Model.RomTreeEntries.Any())
{
    <li class="rom-tree-directory" id="@Model.Id">
        <a data-bs-toggle="collapse" href="#rom-tree-links-@Model.Id" role="button" aria-expanded="false" aria-controls="@Model.Id" aria-label="Expand" class="rom-tree-dir-toggle">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-right" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z" />
            </svg>
        </a>

        <span class="ps-2">@Model.Name</span>


        <div id="rom-tree-links-@Model.Id" class="ms-4 collapse show">
            <ul class="list-unstyled">
                @foreach (var subdir in Model.SubDirectories)
                {
                    <partial name="RomTree/_Romtree" model="subdir" />
                }

                @foreach (var rom in Model.RomTreeEntries)
                {
                    <li class="rom-tree-file">
                        <a href="#" onclick="LoadRom('@rom.Id')"><span>@rom.Name</span></a>
                    </li>
                }
            </ul>
        </div>
    </li>
}